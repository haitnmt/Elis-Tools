@page "/"

<MudStepper ShowResetButton>
    <MudStep Title="Giới thiệu">
        Công cụ chuyển đổi đơn vị hành chính được phát triển nhằm hỗ trợ trong việc chuyển đổi dữ liệu các thửa đất trên cơ sở dữ liệu ELIS SQL,
        khi có các thay đổi về địa giới hành chính, bao gồm việc sát nhập, chia tách, hoặc đổi tên đơn vị hành chính.
    </MudStep>
    <MudStep Title="Kết nối" SecondaryText="Cấu hình kết nối cơ sở dữ liệu ELIS SQL">
        <DataConnection @bind-IsConnected="_isConnected"></DataConnection>
    </MudStep>
    <MudStep Title="Cấu hình" SecondaryText="Cấu hình các tham số chuyển đổi">
        <ConfigDataTransfer IsConnected="_isConnected"></ConfigDataTransfer>
    </MudStep>
    <MudStep Title="Xác thực" SecondaryText="Xác thực cấu hình chuyển đổi">
        <ConfirmConfig IsConnected="_isConnected"></ConfirmConfig>
    </MudStep>
    <MudStep Title="Thực hiện" SecondaryText="Tiến trình chuyển đổi dữ liệu">
    </MudStep>
</MudStepper>
@code
{
    bool _isConnected;
    
}